<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IdleSongTitleAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">20sp</item>
        <item name="singleLine">true</item>
    </style>

    <style name="IdleSongArtistAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#8C8B8B</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="singleLine">true</item>
    </style>

    <style name="SelectedSongTitleAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#E91E63</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SelectedSongArtistAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#E91E63</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
